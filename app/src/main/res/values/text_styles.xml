<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text" parent="TextAppearance.AppCompat" />

    <!--Semibold-->
    <style name="Text.Semibold">
        <item name="fontFamily">@font/montserrat_semi_bold</item>
    </style>

    <style name="Text.Semibold.24">
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">28.8sp</item>
    </style>

    <style name="Text.Semibold.16">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="Text.Semibold.10">
        <item name="android:textSize">10sp</item>
        <item name="lineHeight">12sp</item>
    </style>

    <!--Medium-->
    <style name="Text.Medium">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="Text.Medium.18">
        <item name="android:textSize">18sp</item>
        <item name="lineHeight">27sp</item>
    </style>

    <style name="Text.Medium.16">
        <item name="lineHeight">24sp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Medium.14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Medium.12">
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">16sp</item>
    </style>

    <style name="Text.Medium.10">
        <item name="lineHeight">15sp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--Regular-->
    <style name="Text.Regular">
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="Text.Regular.18">
        <item name="lineHeight">27sp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Regular.14">
        <item name="lineHeight">21sp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Regular.14.Grey">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Text.Regular.12">
        <item name="lineHeight">18sp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Regular.12.Grey">
        <item name="android:textColor">@color/grey_profile_text</item>
    </style>

    <!--Light-->
    <style name="Text.Light">
        <item name="fontFamily">@font/montserrat_light_italic</item>
    </style>

    <style name="Text.Light.12">
        <item name="lineHeight">16sp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Light.12.Grey">
        <item name="android:textColor">@color/grey_profile_text</item>
    </style>

</resources>